{
	"name": "@lwe8/multiregexp",
	"version": "0.0.1",
	"scripts": {
		"build": "tshy",
		"format": "biome format --write ./",
		"lint": "biome check --write ./",
		"check": "biome check ./",
		"test:coverage": "tsx --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=tests/lcov.info --test-update-snapshots",
		"test:local": "tsx --test --test-update-snapshots",
		"docs:coverage": "lcov-viewer lcov -o ./docs/lcoview ./tests/lcov.info",
		"docs": "typedoc && npm run docs:coverage",
		"deploy": "npm run docs && gh-pages -d docs"
	},
	"keywords": [
		"multiregexp",
		"regexp"
	],
	"type": "module",
	"author": "Pho Thin Mg <phothinmg@disroot.org>",
	"license": "Apache-2.0",
	"description": "Multi RegExp",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lwe8/multiregexp.git"
	},
	"bugs": {
		"url": "https://github.com/lwe8/multiregexp/issues"
	},
	"homepage": "https://github.com/lwe8/multiregexp#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/node": "^24.1.0",
		"gh-pages": "^6.3.0",
		"tshy": "^3.0.2",
		"tsx": "^4.20.3",
		"typedoc": "^0.28.7",
		"typedoc-plugin-rename-defaults": "^0.7.3",
		"typescript": "^5.8.3"
	},
	"tshy": {
		"exports": {
			".": "./src/index.ts"
		},
		"selfLink": false
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/commonjs/index.d.ts",
				"default": "./dist/commonjs/index.js"
			}
		}
	},
	"main": "./dist/commonjs/index.js",
	"types": "./dist/commonjs/index.d.ts",
	"module": "./dist/esm/index.js"
}
